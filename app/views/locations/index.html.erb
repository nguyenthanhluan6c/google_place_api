<p id="notice"><%= notice %></p>
<%= form_tag locations_path, :method => :get do %>
  <p>
    Lat  <%= text_field_tag :lat, params[:lat] %>
    Long <%= text_field_tag :long, params[:long] %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
<% end %>
<h1>Locations (<%= @locations.size %>)</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.lat %></td>
        <td><%= location.lng %></td>
        <td><%= location.rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
